<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Request"
    android:paddingHorizontal="5dp"
    android:paddingVertical="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/path_pink"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Want to contact the creator..?"
            android:textColor="@color/black"
            android:fontFamily="@font/alegreya"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make a request.."
            android:textColor="@color/black"
            android:fontFamily="@font/alegreya"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_field_v_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Enter Your Name.."
                android:textColorHint="@color/black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alegreya">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mobile_field_v_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Enter Your Contact number.."
                android:textColorHint="@color/black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alegreya">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/message_field_v_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Type a brief message ( Optional )"
                android:textColorHint="@color/black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alegreya">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Maximum 150 characters allowed.."
                android:fontFamily="@font/alegreya"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/send_req_act"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="50dp"
                android:background="@drawable/black_outline_bg"
                android:gravity="center"
                android:text="SEND"
                android:fontFamily="@font/alegreya"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:clickable="true"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/cancel_req_act"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Cancel"
                android:fontFamily="@font/alegreya"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:clickable="true"
                android:layout_marginTop="10dp"/>

            <ProgressBar
                android:id="@+id/progressBar_req"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="20dp"
                android:visibility="gone" />



    </LinearLayout>

</ScrollView>