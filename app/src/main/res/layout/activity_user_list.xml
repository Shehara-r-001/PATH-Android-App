<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserList">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/anc_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Arts n Crafts"
            android:textColor="@color/white"
            android:fontFamily="@font/alegreya"
            android:layout_marginRight="5dp"
            android:background="@drawable/search_image"/>
        <Button
            android:id="@+id/beauty_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Beauty"
            android:textColor="@color/white"
            android:fontFamily="@font/alegreya"
            android:layout_marginLeft="5dp"
            android:background="@drawable/search_image"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/decos_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Decorations"
            android:textColor="@color/white"
            android:fontFamily="@font/alegreya"
            android:layout_marginRight="5dp"
            android:background="@drawable/search_image"/>
        <Button
            android:id="@+id/foods_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Foods"
            android:textColor="@color/white"
            android:fontFamily="@font/alegreya"
            android:background="@drawable/search_image"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_field"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:hint="Search here.."
            android:inputType="text"
            android:background="@drawable/search_image"
            android:textSize="20sp"
            android:fontFamily="@font/alegreya"
            android:textColor="@color/black"
            android:padding="10dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/search_icon_card"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="40dp"
            android:foregroundGravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/search_img_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/search_i"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/User_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>