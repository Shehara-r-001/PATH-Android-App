<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserList">

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/text_for_userlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for people by category you interested in.."
        android:textSize="25sp"
        android:textColor="@color/black"
        android:fontFamily="@font/alegreya"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/search_field"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:text="Search here.."
        android:inputType="text"
        android:background="@drawable/search_image"
        android:textSize="20sp"
        android:fontFamily="@font/alegreya"
        android:textColor="@color/black"
        android:padding="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/search_icon_card"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="40dp"
        android:foregroundGravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/search_icon_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/search"/>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/User_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>