<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Categories">

    <LinearLayout
        android:id="@+id/catg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/catg_text_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORIES"
            android:textSize="30dp"
            android:fontFamily="@font/alegreya"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/catg_text_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are just One Click Away Finding The Best.."
            android:textSize="20dp"
            android:fontFamily="@font/alegreya"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#00000000"
                android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/catg_AnT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alegreya"
                        android:text="@string/catg01"
                        android:textSize="30sp"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dp"
                        android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/catg_AnT_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/artscrafts"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:background="#00000000">


                <TextView
                    android:id="@+id/catg_Beauty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya"
                    android:text="Beauty"
                    android:textSize="30sp"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/catg_beauty_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/beauty"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/catg_Deco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya"
                    android:text="Decorations"
                    android:textSize="30sp"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/catg_decos_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/decos"
                android:background="#00000000"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/catg_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya"
                    android:text="Foods"
                    android:textSize="30sp"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:background="#00000000"
                    android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/catg_food_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/food"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>


    </LinearLayout>

</ScrollView>