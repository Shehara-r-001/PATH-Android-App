<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Image_Full_Admin"
    android:background="@color/dark_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview_admin_fullview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pink_path_dark_bg"
        android:adjustViewBounds="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/caption_admin_fullview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Caption"
        android:fontFamily="@font/alegreya"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/approve_img_admin_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Approve"
            android:background="@drawable/white_outline"
            android:fontFamily="@font/alegreya"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:paddingVertical="5dp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/discard_img_admin_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discard"
            android:background="@drawable/white_outline"
            android:fontFamily="@font/alegreya"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:paddingVertical="5dp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/warning_img_admin_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Warnings"
            android:background="@drawable/white_outline"
            android:fontFamily="@font/alegreya"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingVertical="5dp"
            android:layout_marginHorizontal="10dp"/>

    </LinearLayout>


</ScrollView>