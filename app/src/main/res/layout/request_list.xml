<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="@color/dark_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:paddingHorizontal="5dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/dark_blue">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/point"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/point_dark"
                android:layout_marginVertical="50dp"/>

            <TextView
                android:id="@+id/sender_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sender"
                android:textColor="@color/white"
                android:fontFamily="@font/alegreya"
                android:textSize="20sp"
                android:layout_toRightOf="@id/point"
                android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="07xxxxxxxx"
                    android:textColor="@color/white"
                    android:fontFamily="@font/alegreya"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/point"
                    android:layout_below="@id/sender_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/sent_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="yyyy/mm/dd hh:mm:ss"
                    android:textColor="@color/white"
                    android:fontFamily="@font/alegreya"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/point"
                    android:layout_below="@id/contact"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/sent_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is the message"
                    android:textColor="@color/white"
                    android:fontFamily="@font/alegreya"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/point"
                    android:layout_below="@id/sent_time"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/reciever"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="reciever"
                    android:textColor="@color/white"
                    android:fontFamily="@font/alegreya"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/point"
                    android:layout_below="@id/sent_msg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>